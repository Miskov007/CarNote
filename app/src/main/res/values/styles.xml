<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonEditTextStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="LabelTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CommonButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
    </style>
    <style name="CommonSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/buttonColor</item>
        <item name="colorSwitchThumbNormal">@color/buttonColor</item>
        <item name="android:colorForeground">@color/buttonColor</item>
    </style>

</resources>
